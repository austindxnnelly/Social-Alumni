link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
link(href="/stylesheets/feed.css" rel="stylesheet")
script(defer, src='/javascripts/preview_image.js')

div(class="form-control" style="box-shadow: 0px 0px 8px #0002")
    div(class="card-body d-flex")
        img(src=`/images/${post.profile_photo_sent}` alt="mdo" width="32" height="32" class="rounded-circle" hspace="10")
        h5(class="card-title justify-content-center") #{post.first_name_sent} #{post.last_name_sent}
    div(class="card-body")
        p(class="card-text") #{post.message_content}
    ul(class="list-group list-group-flush")
        each reply in post.replies
            li(class="form-control d-flex") 
                img(src=`/images/${reply.profile_photo_sent}` alt="mdo" width="32" height="32" class="rounded-circle" hspace="10")
                br
                p(class="fw-bold" hspace="5")  #{reply.first_name_sent} #{reply.last_name_sent}: &nbsp;
                p #{reply.message_content}
    form(class="form-signin" action='/home/' + group +'/feed/' + post.id + '/reply', method = 'post', id="post-form")
        input(type="input", name="reply" class="form-control" placeholder="Reply..." aria-label="Reply" required)